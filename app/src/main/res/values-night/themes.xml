<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketControl" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Colour scheme for page title bar . -->
        <item name="colorPrimary">@color/DarkerGrey</item>
        <!-- Colour scheme for phone top bar(battery status, wifi status etc.) . -->
        <item name="colorPrimaryVariant">@color/LightGrey</item>
        <!-- Colour scheme for stuff like button text . -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!-- This changes the colour of radio buttons when highlighted!!!! -->
        <item name="colorSecondary">@color/SnowBlue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/DimGray</item>
        <item name="android:solidColor">@color/DarkerGrey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="hintTextColor">@color/white</item>

    </style>
</resources>