<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/announcementContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Pages.FirstTimeSetup">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Hi there!"
        android:textSize="36sp"
        android:fontFamily="@font/calibre_regular"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Please provide us with your name."
        android:textColor="@color/black"
        android:fontFamily="@font/calibre_regular"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/nameEditBox"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="Name"
        android:textSize="18sp"
        android:fontFamily="@font/calibre_regular"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/calibre_bold"
        android:onClick="onClick"
        android:textSize="20sp"
        android:text="Reset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEditBox" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="45dp"
        android:fontFamily="@font/calibre_bold"
        android:onClick="onClick"
        android:textSize="20sp"
        android:text="Done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEditBox" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="275dp"
        android:layout_height="267dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/resetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEditBox"
        app:srcCompat="@drawable/icon" />


</androidx.constraintlayout.widget.ConstraintLayout>