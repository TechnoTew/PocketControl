<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketControl" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Change the default font of the app. -->
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Primary brand color. -->
        <!-- Colour scheme for page title bar . -->
        <item name="colorPrimary">@color/GreenVariant2</item>
        <!-- Colour scheme for phone top bar(battery status, wifi status etc.) . -->
        <item name="colorPrimaryVariant">@color/LightGrey</item>
        <!-- Colour scheme for stuff like button text . -->
        <item name="colorOnPrimary">@color/LightGrey</item>
        <!-- Secondary brand color. -->
        <!-- This changes the colour of radio buttons when highlighted!!!! -->
        <item name="colorSecondary">@color/SeaGreen</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

</resources>